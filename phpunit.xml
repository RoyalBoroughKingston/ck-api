<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="vendor/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false">
    <testsuites>
        <testsuite name="Feature">
            <directory suffix="Test.php">./tests/Feature</directory>
        </testsuite>

        <testsuite name="Unit">
            <directory suffix="Test.php">./tests/Unit</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./app</directory>
        </whitelist>
    </filter>
    <php>
        <env name="APP_ENV" value="testing"/>
        <env name="BCRYPT_ROUNDS" value="4"/>
        <env name="CACHE_DRIVER" value="array"/>
        <env name="CACHE_PREFIX" value="testing"/>
        <env name="DB_HOST" value="mysql-testing"/>
        <env name="QUEUE_DRIVER" value="sync"/>
        <env name="SCOUT_PREFIX" value="testing_"/>
        <env name="GEOCODE_DRIVER" value="stub"/>
        <env name="EMAIL_DRIVER" value='"null"'/>
        <env name="SMS_DRIVER" value='"null"'/>
        <env name="FILESYSTEM_CLOUD" value="testing_cloud"/>
    </php>
</phpunit>
